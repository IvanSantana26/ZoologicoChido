<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
tools:context=".Fragment_Crear">


    <EditText
        android:id="@+id/txtId"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="105dp"
        android:layout_marginRight="25dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="number" />

    <Spinner
        android:id="@+id/sClasificacion"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="325dp"
        android:layout_marginRight="25dp" /> />

    <Spinner
        android:id="@+id/sEspecie"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="380dp"
        android:layout_marginRight="25dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="280dp"
        android:layout_marginRight="25dp"
        android:text="Macho" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="280dp"
        android:text="Hembra" />

    <EditText
        android:id="@+id/txtFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="420dp"
        android:layout_marginRight="25dp"
        android:ems="10"
        android:hint="FECHA DE INGRESO"
        android:inputType="date"/>
    <EditText
        android:id="@+id/txtHabitat"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="452dp"
        android:layout_marginRight="25dp"
        android:ems="10"
        android:hint="ALIMENTACIÓN"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/txtAlimentacion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="502dp"
        android:layout_marginRight="25dp"
        android:ems="10"
        android:hint="ALIMENTACIÓN" />

    <Button
        android:id="@+id/bGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="155dp"
        android:layout_marginRight="25dp"
        android:text="AGREGAR"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editNombre"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="105dp"
        android:layout_marginRight="25dp"
        android:ems="10"
        android:hint="NOMBRE"
        android:inputType="textPersonName"
  />

    <Button
        android:id="@+id/bLimpiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="205dp"
        android:layout_marginRight="25dp"
        android:text="LIMPIAR" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="25dp"
        android:text=" Nuevo Registro"
        android:textSize="36sp" />


</FrameLayout>